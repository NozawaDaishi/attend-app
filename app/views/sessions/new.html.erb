<% @page_title = "ログイン" %>

<% if flash.now[:danger] %>
    <p class="alert alert-danger shadow mx-5 mt-3 mb-1 p-3 rounded"><i class="fas fa-exclamation-triangle"></i>　<%= flash.now[:danger] %></p>
<% end %>

<div class="card mx-auto m-5 shadow-lg p-3 mb-5 bg-white rounded" style="width: 25rem;">
    <article class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">ログイン</h4>
        <hr>
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.text_field :number, class: 'form-control', :placeholder => "ユーザーID" %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, class: 'form-control', :placeholder => "パスワード" %>
        </div>
        <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <% end %>
    </article>
</div>
