<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div id="container" class="bg-light">
      <header>
        <%= render "shared/header" %>
      </header>
      <main>
      <% if flash.notice %>
          <p class="alert alert-success shadow mx-5 mt-3 mb-1 p-3 rounded"><i class="fas fa-bullhorn fa-lg"></i>ã€€<%= flash.notice %></p>
      <% end %>

        <%= yield %>
      </main>
      <footer>
        <%= render "shared/footer" %>
      </footer>
    </div>
  </body>
</html>



