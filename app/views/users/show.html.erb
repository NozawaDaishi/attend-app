<% @page_title = "マイページ" %>

<div class="card m-5 p-5 shadow-lg p-3 mb-5 bg-white rounded">
<h1 class="text-center"><%= @page_title %></h1>

<div class="mx-auto">
<div><%= link_to "編集", [:edit, @user] %></div>
<table class="attr">
    <tr>
        <th width="150">クラス</th>
        <td><%= @user.klass %></td>
    </tr>
    <tr>
        <th>学籍番号</th>
        <td><%= @user.number %></td>
    </tr>
    <tr>
        <th>姓</th>
        <td><%= @user.last_name %></td>
    </tr>
    <tr>
        <th>名</th>
        <td><%= @user.first_name %></td>
    </tr>
    <tr>
        <th>役職</th>
        <td><%= @user.role == 1 ? "生徒" : "教師" %></td>
    </tr>
</table>
